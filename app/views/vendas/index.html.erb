<p id="notice"><%= notice %></p>

<h1>Vendas</h1>

<table>
  <thead>
    <tr>
      <th>Produto</th>
      <th>Material</th>
      <th>Valor da venda</th>
      <th>Valor da instalacao</th>
      <th>Lucro da venda</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendas.each do |venda| %>
      <tr>
        <td><%= venda.produto.nome %></td>
        <td><%= venda.material.nome %></td>
        <td>R$ <%= venda.valorVenda %></td>
        <td>R$ <%= venda.valorInstalacao %></td>
        <% lucro = venda.valorVenda + venda.valorInstalacao %>
        <td>R$ <%= lucro %></td>
        <td><%= venda.cliente.nome %></td>
        <td><%= link_to 'Ver', venda %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% valor = 0 %>
<% @vendas.each do |venda| %>
  <% valor = valor + venda.valorVenda + venda.valorInstalacao %>
<% end %>

<hr></hr>

<h2>Valor total das vendas: R$ <%= valor %></h2>

<%= link_to 'Nova venda', new_venda_path %>
<%= link_to 'Voltar', root_path  %>
